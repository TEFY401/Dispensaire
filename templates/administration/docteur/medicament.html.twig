{% extends 'administration/docteur/controleDocteur.html.twig' %}

{% block contenu %}

    <div class="text-center mt-3">
        <h3>
            {{ pats.nom }}
            {{ pats.prenom }}
        </h3> 
    </div>
                <div class="text-center">
                    <div class="p-3 mb-3 bg-danger text-white"><h2>MALADIE: {{ mal.maladie }}</h2></div>
                </div>

        <div class="row g-2">
            <div class="col-6 mx-auto">
                <div class="text-center">
                    <label>Diagnostic du: </label> {{ test.createdAt | date("m/d/Y à h:i") }}
                </div>
            <fieldset class="border p-2">
            <div class="row g-2">
                <div class="col-md-6">
                    <div class="text-center">
                        <label>Syptôme:</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        {{ test.Symptome }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        <label>Antécédents:</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        {{ test.Antecedents }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        <label>Traitements:</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        {{ test.Traitements }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        <label>Température:</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        {{ test.temperature }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        <label>Préssion Artérielle:</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        {{ test.pressionArterielle }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        <label>Observation du gorge:</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        {{ test.gorge }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        <label>Observation du tympans:</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        {{ test.tympans }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        <label>Palpation:</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        {{ test.palpation }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        <label>Auscultation:</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        {{ test.auscultation }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        <label>Percussion:</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        {{ test.percussion }}
                    </div>
                </div>
            </div>
            </fieldset>
        </div>

        
                <div class="col-6 mx-auto">
                    {{form_start(medoc, {'action': path('generaliste')})}}
                    <fieldset class="border p-2">
                        <legend class="w-auto">Médicament</legend>
                            <div class="row g-3">
                                <div class="col-md-12">            
                                    {{form_row(medoc.medicament, {'attr':{'class': "form-control"}})}}
                                </div>
                                <div class="col-md-12">
                                    {{form_row(medoc.delai, {'attr':{'class': "form-control"}})}}
                                </div>
                                <div class="col-md-12">
                                    {{form_row(medoc.description, {'attr':{'class': "form-control"}})}}
                                </div>
                            </div>
                    </fieldset>
                        <div class="text-center">
                            <input type="submit" class="btn btn-success" value="Enregistrer">
                        </div>
                    {{form_end(medoc)}}
                </div>
        
    </div>
                    

{% endblock %}