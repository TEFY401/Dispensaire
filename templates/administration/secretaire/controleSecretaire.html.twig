<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset('bootswatch/bootstrap.min.css') }}">
    <title>Docteur</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">
            <img src="{{ asset('img/2749678.png') }}" alt="Hospital" width="50" heigth="20">
        </a>
            <div class="mx-auto" id="navbarColor02">
                <ul class="navbar-nav mr-auto">
                <li class="nav-item ml-1 mr-5">
                    <a class="nav-link" href="{{ path('enregistrer') }}">Enregistrer un patient</a>
                </li>
                <li class="nav-item ml-1 mr-5">
                    <a class="nav-link" href="{{ path('voir') }}">Liste</a>
                </li>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Search">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                </form>
                </ul>
            </div>
    </nav>
            <div class="container d-flex justify-content-end mt-3">
                <a href="{{ path('accueil')}}" class="btn btn-success nav-item ml-1 mr-5">Se Déconnecter</a>
            </div>
            
        {% block contenu %}
            {{form_start(formInscription)}}
                    <div class="col-3 mx-auto">
                        <div class="mb-3 text-center">
                            {{form_row(formInscription.orienter)}}
                        </div>
                    </div>
                <div class="row mt-4">
                    <div class="col-6 mx-auto">
                            {{form_row(formInscription.nom, {'attr':{'class': "form-control"}})}}
                            {{form_row(formInscription.prenom, {'attr':{'class': "form-control"}})}}
                            {{form_row(formInscription.contact, {'attr':{'class': "form-control", 'placeholder': 'Numéro ou adresse email'}})}}
                            {{form_row(formInscription.profession, {'attr':{'class': "form-control"}})}} 
                        <div class="text-center">
                            <input type="submit" class="btn btn-success" value="Envoyer"> 
                        </div>
                            

                        {{form_end(formInscription)}}
                    </div>  
                </div>
        {% endblock %}
            
    <script src="{{ asset('bootstrap-5.0.0-beta3-dist/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('bootstrap-5.0.0-beta3-dist/css/bootstrap.min.css') }}"></script>
